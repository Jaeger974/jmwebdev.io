<script>

document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('loveButton');
    let intervalId = null;

    // Function to create a single heart
    const createHeart = () => {
        const heart = document.createElement('div');
        heart.classList.add('heart-bubble');

        // 1. Random Size (between 10px and 20px)
        const size = Math.floor(Math.random() * 10) + 10;
        heart.style.width = `${size}px`;
        heart.style.height = `${size}px`;

        // 2. Random Horizontal Position (0% to 90% of button width)
        const left = Math.random() * 90; 
        heart.style.left = `${left}%`;

        // 3. Random Animation Speed (0.8s to 1.5s)
        const duration = Math.random() * 0.7 + 0.8;
        heart.style.animation = `floatPop ${duration}s ease-out forwards`;

        button.appendChild(heart);

        // 4. Cleanup: Remove element from DOM after animation finishes
        setTimeout(() => {
            heart.remove();
        }, duration * 1000); 
    };

    // Start bubbling on mouse enter
    button.addEventListener('mouseenter', () => {
        // Create a heart every 100ms
        intervalId = setInterval(createHeart, 100);
        // Create one immediately so there is no delay
        createHeart();
    });

    // Stop bubbling on mouse leave
    button.addEventListener('mouseleave', () => {
        clearInterval(intervalId);
    });
});

</script>


